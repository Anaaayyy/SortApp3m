<Window x:Class="SortApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Sort Numbers" Height="350" Width="500">
    <Grid>
        <Label Content="Введите числа через запятую:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,10,0,0"/>
        <TextBox Name="NumbersTextBox" Width="400" Height="30" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,40,0,0"/>

        <Label Content="Выберите метод сортировки:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,80,0,0"/>
        <ComboBox Name="SortComboBox" Width="200" Height="30" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,110,0,0">
            <ComboBoxItem Content="Пузырьковая сортировка"/>
            <ComboBoxItem Content="Быстрая сортировка"/>
        </ComboBox>

        <Button Name="SortButton" Content="Отсортировать" Width="200" Height="30" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,160,0,0" Click="SortButton_Click"/>

        <TextBlock Name="ResultTextBlock" Width="400" Height="100" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,210,0,0" TextWrapping="Wrap"/>
    </Grid>
</Window>
